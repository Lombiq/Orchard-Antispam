@model Lombiq.Antispam.Models.JavaScriptAntispamPart
@using Piedone.HelpfulLibraries.Utilities

@{
    Script.Require("jQuery").AtFoot();
}

@Html.HiddenFor(m => m.IAmHuman)

@using (Script.Foot())
{
    if (this.WasNotDisplayed("Lombiq.Antispam.JavaScriptAntispamPartInit"))
    {
        <script type="text/javascript">
            (function ($) {
                var $field = $("#@Html.FieldIdFor(m => m.IAmHuman)");

                $field.closest("form").submit(function () {
                    $field.val("True");
                });
            })(jQuery);
        </script>
    }
}